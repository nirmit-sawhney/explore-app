<%-include('../partials/header') %>
<%-include('../partials/navbar') %>

<main class="container">
    <%-include('../partials/flash') %>
        <div class="row">
            <div class="col-lg-6 mx-auto log-view">
                <div style="display: flex; align-items: center;flex-direction: column;">
                    <span class="navbar-brand" id="logo">&nbsp;eXpl<i class="fas fa-shopping-bag"></i>re</span>
                    <span class="logo-sub">FIND YOUR WAY</span>
                </div>
            </div>
            <div class="col-lg-6 mx-auto log-signup">
             <form action="/login" method="POST" class="log-signup-form">
                 <h1 style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">Login</h1>
                 <hr>
                <div class="login-div">
                    <div class="field">
                        <input type="text" id="username" name="username" placeholder="Enter Username" class="login-inp">
                        <label for="username" class="login-label">Username</label>
                    </div>
                    <div class="field">
                       <input type="password" id="password" name="password" placeholder="Enter Password" class="login-inp">
                       <label for="password" class="login-label">Password</label>
                    </div>
                    <button type="submit" class="btn btn-success mt-2">Login</button>
                    <hr>
                    <p>New to Explore? <a href="/signup" style="font-weight: bold;">Signup Now</a></p>
                </div>
             </form>
            </div>
        </div>
</main>
<%-include('../partials/footer') %>
